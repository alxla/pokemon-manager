
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <!-- insert <div class="card"> -->
    </div>
    <div class="col-xs-12 col-sm-4">
      <h1>Pokemon</h1>
      <%= simple_form_for @pokemon do |f| %>
        <%= f.error_notification %>
        <%= f.input :name %>
        <%= f.input :height %>
        <%= f.input :weight %>
        <%= f.input :bgpic %>
        <%= f.input :bgpic_cache, as: :hidden %>
        <%= f.button :submit, class: "btn btn-primary"%>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-4">
      <!-- insert <div class="card"> -->
    </div>
  </div>
</div>


