<h1>Types</h1>

<div class="container">
  <div class="row">
    <% @types.each do |type| %>
      <div class="col-xs-12 col-sm-4">
        <h2><%= type.name %></h2>
        <p>Faiblesses: <%= type.weakness %></p>

        <%= link_to "Afficher", type_path(type), class: "btn btn-primary btn-xs" %>
        <%= link_to "Modifier", edit_type_path(type), class: "btn btn-warning btn-xs" %>
        <%= link_to "Supprimer", type_path(type), class: "btn btn-danger btn-xs",
            method: :delete,
            data: { confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </div>
</div>
