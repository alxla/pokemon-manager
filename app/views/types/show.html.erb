<% content_for(:title_tag) do %>
  <%= @type.name %>
<% end %>
<div class="container">
  <div class="row">
      <div class="col-xs-2">
      </div>
      <div class="col-xs-8">
        <div class="big_card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @type.pic_url %>')">
          <div class="card-category">
            <%= @type.name %>
          </div>
          <div class="big_badge-container">
            <div class="badge badge-bordered">
              <% @type.pokemons.each do |pokemon| %>
                <%= link_to pokemon_path(pokemon) do %>
                  <%= cl_image_tag pokemon.bgpic_url, :width=>60, :crop=>"fill" %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
